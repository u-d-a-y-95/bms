// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://admin:admin@localhost:5432/BMS?schema=BMS-AUTH"
}

enum Role {
  ADMIN
  OWNER
  MEMBER
}

enum Status {
  ACTIVE
  INACTIVE
}

model User {
  id        String   @id @default(cuid())
  name      String
  mobile    String   @unique
  password  String
  role      Role
  status    Status
  userId    String?
  companyId String?
  createAt  DateTime @default(now())
  updateAt  DateTime @updatedAt()
}
